# My aliases

# Using lsd
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias ll='ls -la'
alias lt='ls --tree'
alias l.='ls -d .*'

alias c='clear'
alias gp='git push'

#alias nodejs to node
alias nodejs='node'

# Copy with progressbar
alias cpv='rsync -ah --info=progress2'

#Make dir and cd into
mkcd ()
{
  mkdir -p -- "$1" && cd -P -- "$1"
}

. ~/.asdf/plugins/java/set-java-home.zsh
